<UserControl x:Class="ART.SurveyMaker.UI.ucMaintainAnswer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ART.SurveyMaker.UI"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="400">
    <Grid>
        <RadioButton x:Name="rdbtnAnswer" 
                     HorizontalAlignment="Left" 
                     Margin="0,10,0,0" 
                     VerticalAlignment="Top" 
                     Height="39"/>
        <ComboBox x:Name="cboAnswers" 
                  HorizontalAlignment="Left" 
                  Margin="35,5,0,0" 
                  VerticalAlignment="Top" 
                  Width="275" SelectionChanged="cboAnswers_SelectionChanged"/>
        <Image x:Name="imgDelete"
               Source="/Delete.png"
               HorizontalAlignment="Left"
               Margin="350, 5, 0, 0"
               VerticalAlignment="Top"
               Width="25"
               Height="25"
               Stretch="Fill" />

    </Grid>
</UserControl>
